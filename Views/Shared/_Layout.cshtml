<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Agenda</title>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <link rel="stylesheet" href="~/css/site.css" />
    <link href="~/lib/font-awesome/css/all.min.css" rel="stylesheet" />

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
   <!-- SweetAlert CDN -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@10">
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>
</head>

<body>
   <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container-fluid">
        <a class="navbar-brand" href="#">Agenda</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
            aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                @if (!User.IsInRole("admin"))
                {
                    <li class="nav-item"><a class="nav-link" href="/Dashboard/Display">Dashboard</a></li>
                }
                <li class="nav-item"><a class="nav-link" href="/Calendario/Display">Calendario</a></li>

                @if (User.IsInRole("admin"))
                {
                    <li class="nav-item"><a class="nav-link" href="/Admin/Display">PaginaAdmin</a></li>
                }
                <li class="nav-item">
                    <a class="nav-link" href="/UserAuthentication/ChangePassword">Contraseña</a>
                </li>
            </ul>

            <ul class="navbar-nav ms-auto">
                @if (!string.IsNullOrEmpty(User.Identity.Name))
                {
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-page="/Dashboard/Display" title="User Dashboard">
                            Hola @(User.Identity.Name ?? "Usuario sin nombre")!
                        </a>
                    </li>
                    
                    <li class="nav-item">
                        <a class="nav-link" href="/UserAuthentication/Logout" style="color: rgb(216, 11, 11);">
                            Cerrar Sesión
                        </a>
                    </li>
                }
                else
                {
                    <partial name="_LoginPartial" />
                }
            </ul>
        </div>
    </div>
</nav>

    <div class="container">
        @RenderBody()
    </div>
    <script src="~/lib/fullcalendar/packages/core/main.js"></script>
    <script src="~/lib/fullcalendar/packages/interaction/main.js"></script>
    <script src="~/lib/fullcalendar/packages/daygrid/main.js"></script>
    <script src="~/lib/fullcalendar/packages/bootstrap5/main.js"></script>
    <script src="~/lib/fullcalendar/packages/timegrid/main.js"></script>
    <script src="~/lib/fullcalendar/packages/list/main.js"></script>
    <script src="~/lib/fullcalendar/packages/moment/main.js"></script>
    <script src="~/lib/fullcalendar/packages/moment-timezone/main.js"></script>
    <script src="~/superagent/superagent.js"></script>
    <script src="~/moment.js/moment.js"></script>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/fullcalendar/dist/index.global.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>