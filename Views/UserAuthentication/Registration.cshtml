@model Agenda.Models.Dto.RegistrationModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap 5 CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-XXj2s1izIdI6Ux9QjFU7c5i21aNwpw4UH4qjNCnWo6s4Q8g7VyTt4A4v4kNq2dYz"
        crossorigin="anonymous"></script>
</head>

<body>
    @Html.ValidationSummary()
    <div class="container">
        <div class="row">
            <div class="col-md-4 mx-auto my-4">
                <form asp-action="Registration" method="post" enctype="multipart/form-data">
                    <h3 class="text-center">Registro de Usuario</h3><br>
                    <div class="form-group">
                        <label>Nombre*</label>
                        <input type="text" class="form-control" asp-for="FirstName" />
                        <span class="text-danger" asp-validation-for="FirstName"></span>
                    </div>

                    <div class="form-group">
                        <label>Imagen</label>
                        <input type="file" class="form-control" asp-for="ImageFile" />
                        <span class="text-danger" asp-validation-for="ImageFile"></span>
                    </div>
                    <div class="form-group">
                        <img id="imagePreview" alt="Vista previa de la imagen"
                            style="display: none; max-width: 100%; max-height: 200px;" />
                    </div>

                    <div class="form-group">
                        <label>Apellido*</label>
                        <input type="text" class="form-control" asp-for="LastName" />
                        <span class="text-danger" asp-validation-for="LastName"></span>
                    </div>

                    <div class="form-group">
                        <label>Email</label>
                        <input type="text" class="form-control" asp-for="Email" />
                        <span class="text-danger" asp-validation-for="Email"></span>

                    </div>

                    <div class="form-group">
                        <label>Usuario</label>
                        <input type="text" class="form-control" asp-for="Username" />
                        <span class="text-danger" asp-validation-for="Username"></span>

                    </div>

                    <div class="form-group">
                        <label>Password (Example.test@123)</label>
                        <input type="password" class="form-control" asp-for="Password" />
                        <span class="text-danger" asp-validation-for="Password"></span>

                    </div>

                    <div class="form-group">
                        <label>Confirmar Password</label>
                        <input type="password" class="form-control" asp-for="PasswordConfirm" />
                        <span class="text-danger" asp-validation-for="PasswordConfirm"></span>

                    </div>
                    <br>
                    @if (TempData["msg"] != null)
                    {
                        <div class="form-group">
                            <span class="text-info">@TempData["msg"]</span>
                        </div>
                    }
                    <br>
                    <button type="submit" class="btn btn-primary btn-block" style="width: 100%;">Registrarse</button>

                    <br>
                    <br>
                    <div class="form-group text-center">
                        <a class="text-alert" href="/UserAuthentication/Login">Â¿Ya tienes cuenta? Login</a>
                    </div>

                </form>
            </div>
        </div>
    </div>

    <!-- Otros scripts y archivos JS -->

</body>

</html>
