@model Agenda.Models.Dto.RegistrationModel
@{
    Layout = null;
}


<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    
@Html.ValidationSummary()
<div class="container">
    <div class="row">
        <div class="col-md-4 mx-auto my-4">
            <h3>Registro de Usuario</h3>
            <form asp-action="Registration" method="post">
                <div class="form-group">
                    <label>Nombre*</label>
                    <input type="text" class="form-control" asp-for="FirstName" />
                    <span class="text-danger" asp-validation-for="FirstName"></span>
                </div>

                <div class="form-group">
                    <label>Apellido*</label>
                    <input type="text" class="form-control" asp-for="LastName" />
                    <span class="text-danger" asp-validation-for="LastName"></span>
                </div>

                <div class="form-group">
                    <label>Email</label>
                    <input type="text" class="form-control" asp-for="Email" />
                    <span class="text-danger" asp-validation-for="Email"></span>

                </div>

                <div class="form-group">
                    <label>Usuario</label>
                    <input type="text" class="form-control" asp-for="Username" />
                    <span class="text-danger" asp-validation-for="Username"></span>

                </div>

                <div class="form-group">
                    <label>Password (Example.test@123)</label>
                    <input type="password" class="form-control" asp-for="Password" />
                    <span class="text-danger" asp-validation-for="Password"></span>

                </div>

                <div class="form-group">
                    <label>Confirmar Password</label>
                    <input type="password" class="form-control" asp-for="PasswordConfirm" />
                    <span class="text-danger" asp-validation-for="PasswordConfirm"></span>

                </div>
                <br>
                @if (TempData["msg"] != null)
                {
                    <div class="form-group">
                        <span class="text-info">@TempData["msg"]</span>
                    </div>
                }
                <br>
                <button type="submit" class="btn btn-primary btn-block" style="width: 100%;">Registrarse</button>

                <br>
                <br>
                <div class="form-group text-center">
                    <a class="text-alert" href="/UserAuthentication/Login">Â¿Ya tienes cuenta? Login</a>
                </div>

            </form>
        </div>
    </div>
</div>