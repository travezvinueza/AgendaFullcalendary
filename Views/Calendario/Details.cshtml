@model CalendarEvents.Models.CalendarEvent

@{
    ViewData["Title"] = "Detalles del Evento";
}

<div class="alert alert-danger" role="alert">
  <center><h2>¿Realmente quieres eliminar este evento?</h2></center>  
</div>

<div>
    <dl class="row">

        <dt class="col-sm-2">
            <label for="NameLawyer">Nombre Cancha</label>
        </dt>
        <dd class="col-sm-10">
            @Model.NameLawyer
        </dd>

        <dt class="col-sm-2">
            <label for="Title">Nombre</label>
        </dt>
        <dd class="col-sm-10">
            @Model.Title
        </dd>

        <dt class="col-sm-2">
            <label for="Description">Descripcion</label>
        </dt>
        <dd class="col-sm-10">
            @Model.Description
        </dd>

        <dt class="col-sm-2">
            <label for="Start">Fecha Inicio</label>
        </dt>
        <dd class="col-sm-10">
            @Model.Start
        </dd>

        <dt class="col-sm-2">
            <label for="End">Fecha Fin</label>
        </dt>
        <dd class="col-sm-10">
            @Model.End
        </dd>

        <dt class="col-sm-2">
            <label for="Color">Color</label>
        </dt>
        <dd class="col-sm-10">
            @Model.Color
        </dd>

        <!-- Agrega más campos según sea necesario -->

    </dl>
    <div>
        <form asp-action="Delete" method="post">
            <input type="hidden" name="id" value="@Model.Id" />
            <input type="hidden" name="lawyerId" value="@Model.LawyerId" />
            <button type="submit" class="btn btn-danger">Eliminar</button>
        </form>

    </div>
    <br>
    <a asp-action="Display" class="btn btn-dark">Volver al calendario</a>

</div>
